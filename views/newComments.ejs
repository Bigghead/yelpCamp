<% include partials/header %>
<div class="container" style='margin-top: 5%'>
  <h1 class='text-center'>Add A New Comment to <em><%= camp.name %></em></h1>
  <form class="" action="/campgrounds/<%= camp._id %>/newComments" method="post" >
    <div class="form-group">
      <label for="">Name:</label>
      <input required class='form-control'type="text" name="commentAuthor" value="" placeholder='Name Here'>
    </div>
    <div class="form-group">
      <label for="">Ramble:</label>
      <textarea required class='form-control' name="commentText" placeholder='Say It Here'></textarea>
    </div>
    <div class='text-center'>
      <button class='btn btn-lg btn-info'type="submit" name="button">Add Comment</button>
    </div>
  </form>
</div>


<% include partials/footer %>
