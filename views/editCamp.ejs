
<% include partials/header %>
<% console.log(foundCamp); %>

<div class='container'>
    <h1 style='text-align: center;'>Edit <%= foundCamp.name %></h1>
    <div style='margin: 25px auto;'>
      <form class="" action="/campgrounds/<%= foundCamp._id%>?_method=PUT" method="post">
        <div class='form-group'>
          <input required class='form-control' type="text" name="campName" placeholder='Campsite Name' id='campName1' value="<%- foundCamp.name %>">
        </div>
        <div class='form-group'>
          <input required class='form-control' type="text" name="campImage" placeholder='Image URL' value='<%= foundCamp.image %>'>
        </div>
        <div class='form-group'>
          <input required class='form-control' type="text" name="campDescription" placeholder='Anything to say?' value='<%= foundCamp.description %>'>
        </div>
        <div class='form-group'>
          <button class='btn btn-info btn-large btn-block' type="submit" name="button">Edit <%= foundCamp.name %></button>
        </div>
        <a href="/campgrounds/<%= foundCamp._id %>" class='btn btn-block btn-primary'>Back To <%= foundCamp.name %></a>
      </form>
    </div>
</div> <!-- end container -->

<% include partials/footer %>
