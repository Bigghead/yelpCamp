          <div id='comment-box'>
            <% id.comments.forEach(function(comment){  %>
              <p>***** <strong><%= comment.author %></strong></p>
              <p><%= comment.text %></p>
          <%  })  %>

        <a href="/campgrounds/<%= id._id %>/newComments" class='btn btn-lg btn-info'>Add A New Comment</a>
          </div>

    </div>
  </div>
</div>

