
<% include partials/header %>

<div class='container'>
    <h1 style='text-align: center;'>Create A New Campground</h1>
    <div style='margin: 25px auto;'>
      <form class="" action="/campgrounds" method="post">
        <div class='form-group'>
          <input required class='form-control' type="text" name="campName" placeholder='Campsite Name' id='campName1'>
        </div>
        <div class='form-group'>
          <input required class='form-control' type="text" name="campImage" placeholder='Image URL'>
        </div>
        <div class='form-group'>
          <input required class='form-control' type="text" name="campDescription" placeholder='Anything to say?'>
        </div>
        <div class='form-group'>
          <button class='btn btn-info btn-large btn-block' type="submit" name="button">Add New Campground</button>
        </div>
        <a href="/campgrounds" class='btn btn-block btn-primary'>Back To Campgrounds</a>
      </form>
    </div>
</div> <!-- end container -->

